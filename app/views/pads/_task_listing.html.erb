<div class="card">
  <h2 class="card-header">
    <%= @pad.name %>
    <%= link_to 'Edit', edit_pad_path(@pad), class: 'btn btn-primary float-right' %>
  <h2>
  <h5 class="card-body">
    <%= @pad.description %>
  </h5>
  <div class="card-body">
    <div class='table-responsive'>
      <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Complete</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.complete %></td>
            <td><%= link_to fa_icon("edit lg"), edit_pad_task_path(@pad,task) %></td>
            <td><%= link_to fa_icon("trash lg"), pad_task_path(@pad,task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>