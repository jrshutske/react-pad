<div class="card">
  <h2 class="card-header">
    Pads
  </h2>
  <div class="card-body">
    <div class='table-responsive'>
      <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @pads.each do |pad| %>
          <tr>
            <td><%= link_to pad.name, pad %></td>
            <td><%= pad.description %></td>
            <td><%= link_to fa_icon("edit lg"), edit_pad_path(pad) %></td>
            <td><%= link_to fa_icon("trash lg"), pad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
<br>
<%= render 'form', pad: @pad %>
<%= link_to 'New Pad', new_pad_path %>
