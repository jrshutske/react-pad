<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, pad_task_path(@pad,task) %></td>
        <td><%= task.complete %></td>
        <td><%= link_to 'Edit', edit_pad_task_path(@pad,task) %></td>
        <td><%= link_to 'Destroy', pad_task_path(@pad,task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_pad_task_path %>
